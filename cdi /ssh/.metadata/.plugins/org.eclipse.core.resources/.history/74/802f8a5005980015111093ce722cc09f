package ExoObjet;


public class Individu
{
		 private String  m_strNom;
		 private String  m_strPrénom;
		 private String  m_strAdresse;
		 
		 
		 
	 public String getNom()
			{
				return m_strNom ;
			}
		    /**
		     * jhkgbjghkghkjhkjhk
		     * @param nom
		     * @return
		     */
	public boolean setNom (String nom)
			{
			if ( nom != null && nom.matches("^[\\p{L}]+$"))
			{
				 m_strNom = nom;
				return true;
			}
			
			else
			{
				return false;
			}
			   
			}
	public String getPrénom()
		    {
				return  m_strPrénom  ;
			}
			
	public boolean setPrénom (String prénom)
			{
			if ( prénom != null && prénom.matches("^[\\p{L}]+$"))
			{
			    m_strPrénom = prénom;
				  return true;
			}
			else
			{
				return false;
			}
				
			}
	public String getAdresse()
			{
				return m_strAdresse;
			}
	public void setAdresse(String adresse)
			{
				 m_strAdresse = adresse;
			}
	
	
	public void main (String[] arg)
	  {
		System.out.println("Entrez votre nom");
		String m_strNom=Lire.S();

		System.out.println("Votre nom est " + m_strNom);
		
		
		System.out.println("Entrez votre prénom");
		String m_strPrénom =Lire.S();

		System.out.println("Votre prénnom est " + m_strPrénom);
		
		System.out.println("Entrez votre adresse");
		String  m_strAdresse =Lire.S();

		System.out.println("Votre prénnom est " + m_strAdresse);	
		
	  }

    

			
		
			
			
			
			
			
			
			
			
			
		
	
