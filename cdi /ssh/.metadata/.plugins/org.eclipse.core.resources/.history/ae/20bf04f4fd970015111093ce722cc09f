package ExoObjet;


public class Individu
{
		 private String nom;
		 private String prénom;
		 private String adresse;
		 
		 
		 
		    public String getNom()
			{
				return nom;
			}
		    /**
		     * jhkgbjghkghkjhkjhk
		     * @param nom
		     * @return
		     */
			public boolean setNom (String m_nom)
			{
			if ( nom == null && nom.matches("^[\\p{L}]+ $"))
			{
				 nom = m_nom;
				return true;
			}
			
			else
			{
				return false;
			}
			   
			}
			public String getPrénom()
			{
				return prénom;
			}
			
			public boolean setPrénom (String m_prénom)
			{
			if ( prénom != null && prénom.matches("^[\\p{L}]+ $"))
			{
				 prénom = m_prénom;
				  return true;
			}
			else
			{
				return false;
			}
				
			}
			public String getAdresse()
			{
				return adresse;
			}
			public void setAdresse(String m_adresse)
			{
				adresse = m_adresse;
			}
			
			
			
			
			
			
			
			
			
			
			
			
			
			
	
	
		}
		
		
		
		
		
		
		
		
		
	
			
		
	





















