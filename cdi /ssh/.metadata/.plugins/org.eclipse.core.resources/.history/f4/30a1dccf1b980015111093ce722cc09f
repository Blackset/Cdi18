package objetExo2;

public class boiteOutil
{
   public static boolean estAlpha (String mot)
	{
		if ( mot != null && mot.matches("^[\\p{L}]+$"))
		{
	
			return true;
		}
		
		else
		{
			return false;
		}	
 }
   
   public static boolean estEntier (String s)
 {
       boolean Valide = true;
       
       try{ Integer.parseInt(s); }
       catch(NumberFormatException nfe){ Valide = false; }
       return Valide;
   }

   
   
}